<h2>注册</h2>

<%= form_for(resource, as: resource_name, :html => {:class => "form-horizontal"}, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <%= f.label :用户名 %><br />
    <%= f.text_field :username, autofocus: true,:class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :邮箱 %><br />
    <%= f.email_field :email,:class => "form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :密码 %>
    <% if @validatable %>
    <em>(至少<%= @minimum_password_length %>个字符)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",:class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :确认密码 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",:class => "form-control" %>
  </div>

  <%= f.submit "注册",:class => "btn btn-default" %>
  <%= link_to "返回", new_session_path(resource_name),:class => "btn btn-default"%>

<% end %>

<%= render "devise/shared/links" %>
