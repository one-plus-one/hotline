<h1>所有问题</h1>
<table class="table">
  <thead>
    <tr>
      <td><%= t('.catalog') %></td>
      <td><%= t('.title') %></td>
      <td><%= t('.answer') %></td>
      <td><%= t('.created_at') %></td>
      <td><%= t('.edit') %></td>
      <td><%= t('.delete') %></td>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository|%>
    <tr>
      <td><%= repository.catalog.name %></td>
      <td>
        <%= link_to repository.title[0,20], repository_path(repository) %>
      </td>
      <td>
        <%= link_to repository.answer[0,20], repository_path(repository) %>
      </td>
      <td><%= repository.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= link_to t('.edit'), edit_repository_path(repository), :class => 'btn btn-default' %></td>
      <td><%= link_to t('.delete'),repository_path(repository), method: :delete, :class => 'btn btn-danger', :data => { confirm: '您确定删除这条记录吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @repositories %>
<%= link_to '新建问题', new_repository_path, class: 'btn btn-default'  %>


