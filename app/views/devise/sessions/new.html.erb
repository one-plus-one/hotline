<h1 class="text-center">登录</h1>
<% if alert!=nil  %>
<div class="alert alert-danger"><%= alert%></div>
<% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :用户名, :class=> "control-label" %>
    <%= f.text_field :username, autofocus: true,:class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :密码 %>
    <%= f.password_field :password, autocomplete: "off",:class => "form-control"%>

  </div>
<div class="row-fluid">
  <%= f.submit "登录",:class => "btn btn-danger" %>

  <%= link_to "注册", new_registration_path(resource_name), :class => "btn btn-default" %>

  <%= link_to "忘记密码?", new_password_path(resource_name), :class=> "btn btn-link pull-right" %>

</div>

<% end %>