<div id="top-header">
  <h2><%= @tel %>来电</h2>
</div>

<%= render 'form' %>
<% unless(@work_order.customer.id==nil) then %>
    <button type="button" class="btn btn-link btn-lg" data-toggle="modal" data-target="#myModal" id="testBtn" accesskey="l">
      <%= t ('.history') %>
    </button>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog customer_div">
        <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">
              <a href="#" id="link_history_count"><%= @arrays.count %>个问题</a>
            </h4>
          </div>
          <div class="modal-body">
            <table class="table table-hover">
              <% @arrays.each_with_index do |array,index| %>
                  <tr>
                    <td>
                      <%= link_to t('.question')+array.title, "", id: '1:'+index.to_s %>
                    </td>
                    <td>
                      <div class="customerWidth">
                        <%= link_to t('.answer')+array.answer,"", id: '2:'+index.to_s %>
                      </div>
                    </td>
                    <td>
                      <%= link_to t('.note')+array.note, "", id: '3:'+index.to_s %>
                    </td>
                    <td>
                      <%= link_to t('.username')+array.work_order.customer.name,"", id: '4:'+index.to_s %>
                    </td>
                    <td>
                      <%= link_to t('.time')+array.created_at.strftime('%Y-%m-%d %H:%M'),"",id: '5:'+index.to_s %>
                    </td>
                  </tr>
              <% end %>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">
              <%= t ('.close') %>
            </button>
          </div>
        </div>
      </div>
    </div>
<% end %>
<script>
    $('#top-header').ready(function(){
        offhook();
    });

    $('#myModal').on('shown.bs.modal', function () {
      $('#link_history_count').focus()
    });
        btnParking.disabled = true;
        btnOnhook.disabled = false;
</script>







