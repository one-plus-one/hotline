<h1>所有问题</h1>
<table class="table">
  <thead>
    <tr>
      <td>类别</td>
      <td>问题</td>
      <td>答案</td>
      <td>创建时间</td>
      <td>删除</td>
    </tr>
  </thead>

  <tbody>
    <% @repositories.each do |repository|%>
    <tr>
      <td><%= repository.catalog.name %></td>
      <td>
        <%= link_to repository.title[0,20], repository_path(repository) %>
      </td>
      <td>
        <%= link_to repository.answer[0,20], repository_path(repository) %>
      </td>
      <td><%= repository.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
      <td><%= link_to '删除',repository_path(repository), method: :delete, :class => 'btn btn-danger', :data => { confirm: '您确定删除这条记录吗?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @repositories %>
<%= link_to '新建问题', new_repository_path, class: 'btn btn-default'  %>
<%= link_to '新建目录', new_catalog_path, :class => 'btn btn-default'%>

