<%= javascript_include_tag "hello" %>

<h1>Listing users</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Show', user , :class => "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_user_path(user), :class => "btn btn-link"  %></td>
        <td><%= link_to 'Destroy', user, :class => "btn btn-link", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Logout', destroy_user_session_path, :method => :delete, :class => "btn btn-link"%>  
<%= link_to 'New User', new_user_path %>
