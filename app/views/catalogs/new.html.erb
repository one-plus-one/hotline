<h2>新建目录</h2>

<%= form_for @catalog  do |f| %>
    <div class="form form-horizontal">
      <%= f.label '目录名称', :class => 'control-label' %>
      <%= f.text_field :name, :class => 'form-control', :placeholder => '请输入目录名称' %>
      <%= f.submit '提交', :class => 'btn btn-danger' %>
    </div>
<% end %>