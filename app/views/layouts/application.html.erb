<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div id="my_log"></div>
    <% if current_user != nil %>
    <button type="button" class="btn btn-default" onclick="setready()">就绪</button>
    <button type="button" class="btn btn-default" disabled="true">应答</button>
    <button type="button" class="btn btn-default" onclick="offhook()" disabled="true">挂机</button>
    <button type="button" class="btn btn-default" onclick="setbusy()">小休</button>
    <%=current_user.username %>
    <%= link_to '退出登录', destroy_user_session_path, :method => :delete, :class => "btn btn-default" %></br>
    <% end %>
<%= yield %>

</body>

<script>
    $('#main').ready(function() {
                <% if current_user != nil %>
                ws_connect();
                login();
                <%end %>
            }
    );
</script>
</html>
